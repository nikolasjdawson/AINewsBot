<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Host</th>
      <th>Admin email</th>
      <th>Logo</th>
      <th>Favicon link</th>
      <th>Mailgun key</th>
      <th>Mailgun domain</th>
      <th>Intro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.host %></td>
        <td><%= site.admin_email %></td>
        <td><%= site.logo %></td>
        <td><%= site.favicon_link %></td>
        <td><%= site.mailgun_key %></td>
        <td><%= site.mailgun_domain %></td>
        <td><%= site.intro %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
