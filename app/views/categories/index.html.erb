<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Position</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.position %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_category_path(category) %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-danger' %>
