<h1>Latest news from <%= @site.name %></h1>
<p>Hi <%= @subscriber.first_name %> </p>
<% @categories.each do |cat| %>
  <h3><%= cat.title %></h3>
  <% cat.latest_items.each do |item| %>
    <p><%= item.title %> [<%= link_to 'Link', item.link %>] <em><%= item.host %></em></p>
  <% end %>
<% end %>
<%= link_to "Unsubscribe", unsubscribe_subscriber_url(@subscriber.id) %> |
<%= link_to "Edit your subscription", edit_subscriber_url(@subscriber.id) %>
