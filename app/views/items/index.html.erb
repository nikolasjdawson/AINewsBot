<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Pub date</th>
      <th>Category</th>
      <th>Feed source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.title, item.link, target: "_blank" %></td>
        <td><%= item.pub_date.strftime('%d %b %y') if item.pub_date %></td>
        <td><%= item.category %></td>
        <td><%= item.feed_source.title %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

