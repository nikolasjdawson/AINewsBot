<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Pub date</th>
      <th>Is published</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= image_tag post.image_url, width: '50px' %></td>
        <td><%= post.pub_date.strftime('%d %b %y') %></td>
        <td><%= 'Published' if post.is_published %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
