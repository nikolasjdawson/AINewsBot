<p id="notice"><%= notice %></p>

<h1>News Sources</h1>

<table>
  <thead>
    <tr>
      <th>Likes</th>
      <th>Link</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_sources.each do |news_source| %>
      <tr>
        <td><%= news_source.likes %></td>
        <td><%= news_source.link %></td>
        <td><%= news_source.title %></td>
        <td><%= link_to 'Show', news_source %></td>
        <td><%= link_to 'Edit', edit_news_source_path(news_source) %></td>
        <td><%= link_to 'Destroy', news_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Source', new_news_source_path %>
